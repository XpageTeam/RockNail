header.head
	.wrapper
		.head__wrap
			.head__burger
				.burger
					span
			.head__logo
				a.logo(href="#")
					figure
						img(src="img/photos/logo.png", alt="RockNail", title="RockNail")
					figure
						img(src="img/photos/logo-hover.png", alt="RockNail", title="RockNail")
			.head__title
				.head-title Гель * лаки
			nav.head__menu
				ul.menu
					li
						a.menu__link.active(href="#") Акции
					each title in ["О нас", "Доставка и оплата", "Отзывы", "Оптовикам", ]
						li
							a.menu__link(href="#")=title
			.head__phone
				address.head-phone
					a(href="tel: 8 800 569 89 89") 8 800 569 89 89
			.head__search
				button.search-button
				.search
					.search__form
						form(action="#")
							.search__form-input
								input(type="search" placeholder="Более 550 оттенков")
					.search__close
						button.search-close
			.head__favorite
				a.favorite-link(href="#", data-count="1")
			.head__lc
				a.lc-link(href="#")
			.head__cart
				.head__cart-wrap
					a.cart-link(href="#", data-count="15")
				.cart-line
					.cart-line__title Ваша корзина
					.cart-line__content
						.small-cart
							- for (let i = 0; i <= 10; i++)
								.small-cart__one
									.tovar-small
										a.tovar-small__img
											img(src="img/photos/nail.png")
										.tovar-small__desc
											a.tovar-small__desc-title(href="#") Гель-лак Rock Nail Baby Nude
											.tovar-small__desc-bot
												.tovar-small__desc-info 045 Blue Ocean
												.tovar-small__desc-price 1 x 250 Р
					.cart-line__footer
						.cart-line__footer-total
						.cart-line__footer-btn
							a.default-btn(href="#") Оформить заказ
